@model AdminPortal.Models.AdminIndexData

@{
    ViewBag.Title = "List of Admins";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Register New Admin", "Register", "Account")
</p>

<table class="table">
    <tr>
        <th>Username</th>
        <th>Email</th>
        <th>Phone Number</th>
        <th>Restaurants</th>
        <th></th>
    </tr>

    @foreach (var item in Model.AspNetUsers)
    {
        string selectedRow = "";
        if (item.Id == ViewBag.AspNetUserID)
        {
            selectedRow = "success";
        }
        <tr class="@selectedRow">
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @{
        foreach (var rest in item.Restaurants1)
        {
            @rest.ID @:  @rest.Name <br />
                    }
                }
            </td>

            <td>
                @Html.ActionLink("Select", "Index", new { id = item.Id }) |
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>

@if (Model.Restaurants != null)
{
    <h3>Restaurants Administrated by Selected User</h3>
    <table class="table">
        <tr>
            <th>Number</th>
            <th>Name</th>
        </tr>

        @foreach (var item in Model.Restaurants)
        {
            string selectedRow = "";
            if (item.ID == ViewBag.CourseID)
            {
                selectedRow = "success";
            }
            <tr class="@selectedRow">
                <td>
                    @item.ID
                </td>
                <td>
                    @item.Name
                </td>
            </tr>
        }
    </table>
}
