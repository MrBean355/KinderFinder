@model AdminPortal.Models.Restaurant

@{
    ViewBag.Title = "Delete Restaurant";
}

<h2>Delete</h2>
<h3>Are you sure you want to delete this restaurant?</h3>

<div>
    <hr />
    <dl class="dl-horizontal">
        <!-- NAME -->
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <!-- MAP -->
        <dt>
            @Html.DisplayNameFor(model => model.Map)
        </dt>
        <dd>
            @if (Model.Map != null) {
                <img src="@Url.Action("GetMap", "Restaurants", new { id = Model.ID })" alt="Map image" />
            }
            else {
                @Html.Raw("(none)");
            }
        </dd>

        <!-- ADMINISTRATOR -->
        <dt>
            @Html.DisplayNameFor(model => model.Admin)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AspNetUser.UserName)
            (<a href="mailto:@Model.AspNetUser.Email">@Model.AspNetUser.Email</a>)
        </dd>

        <!-- DELETE BUTTON -->
        <dt></dt>
        <dd>
            @using (Html.BeginForm()) {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-default" />
                </div>
            }
        </dd>
    </dl>

    <div class="form-actions no-color">
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>
