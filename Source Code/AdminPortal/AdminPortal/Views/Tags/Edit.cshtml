@model AdminPortal.Models.Tag

@{
    ViewBag.Title = "Edit Tag";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <!-- LABEL -->
        <div class="form-group">
            @Html.LabelFor(model => model.Label, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Label, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Label, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- UUID -->
        <div class="form-group">
            @Html.LabelFor(model => model.BeaconID, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.BeaconID, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BeaconID, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- OWNING RESTAURANT -->
        <div class="form-group">
            @Html.LabelFor(model => model.Restaurant, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Restaurant", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Restaurant, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- CURRENT USER -->
        <div class="form-group">
            @Html.LabelFor(model => model.CurrentUser, "Current User", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("AppUsersID", String.Empty)
                @Html.ValidationMessageFor(model => model.CurrentUser, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- OUT OF ORDER -->
        <div class="form-group">
            @Html.LabelFor(model => model.OutOfOrder, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.OutOfOrder, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.OutOfOrder, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- LAST ACCESSED -->
        <div class="form-group">
            @Html.LabelFor(model => model.LastAccessed, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.LastAccessed, new { htmlAttributes = new { @class = "form-control"}})
                @Html.ValidationMessageFor(model => model.LastAccessed)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
