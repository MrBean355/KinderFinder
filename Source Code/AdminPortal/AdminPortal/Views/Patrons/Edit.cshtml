@model AdminPortal.Models.Patron

@{
    ViewBag.Title = "Edit Patron Details";
}

@* Page only accesible by logged in users. *@
@Html.Partial("_AuthenticatedPartial")

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
